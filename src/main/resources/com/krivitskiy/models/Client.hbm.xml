<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="com.krivitskiy.models.Client" table="client">
        <meta attribute="class-description">
            This class contains the client detail.
        </meta>
        <id name="id" type="int" column="uid">
            <generator class="identity"/>
        </id>
        <property name="nameOfClient" column="cname" type="string"/>
        <property name="phoneOfClient" column="phone" type="string"/>
        <property name="cityOfClient" column="city" type="string"/>
        <property name="addressOfClient" column="address" type="string"/>
        <property name="nameOfClient" column="cname" type="string"/>

    </class>
</hibernate-mapping>