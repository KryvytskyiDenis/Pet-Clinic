<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="com.krivitskiy.models.Pet" table="pet">
        <meta attribute="class-decoration">
            This class contains the pet detail.
        </meta>
        <id name="id" type="int" column="uid">
            <generator class="identity"/>
        </id>
        <property name="nameOfPet" column="pname" type="string"/>
        <property name="typeOfPet" column="ptype" type="string"/>
        <property name="clientId" column="client_id" type="int"/>

        <!--<many-to-one name="client" column="client_id" class="com.krivitskiy.models.Client" cascade="all"/>-->

    </class>
</hibernate-mapping>